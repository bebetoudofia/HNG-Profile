<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bebeto.apk.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#424242"
        tools:context="com.example.bebeto.apk.MainActivity">

        <ImageView
            android:layout_width="400dp"
            android:layout_height="184dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="-24dp"
            android:background="@drawable/bi" />

        <ImageView
            android:layout_width="167dp"
            android:layout_height="167dp"
            android:layout_marginLeft="110dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="-84dp"
            android:background="@drawable/pic" />

        <TextView
            android:text="EDET UDOFIA"
            android:textSize="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_gravity="center"/>

        <TextView
            android:text="  Slack Handle: @bebetoudofia   "
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:paddingBottom="8dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <TextView
            android:text=" I am Edet Udofia, a basketballer
        who has  flare for 'tech' "
            android:textStyle="bold"
            android:background="#3F51B5"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:paddingLeft="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="You can reach me"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:textStyle="normal"
            android:background="#3F51B5"
            android:textColor="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="112dp"
            android:layout_marginRight="20dp"/>

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#3F51B5"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <ImageButton
                android:onClick="openEmail"
                android:id="@+id/mail"
                android:src="@drawable/mail"
                android:scaleType="centerCrop"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="15dp"/>

            <ImageButton
                android:onClick="openTwitter"
                android:id="@+id/twit"
                android:src="@drawable/twitter"
                android:scaleType="centerCrop"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@id/mail"/>

            <ImageButton
                android:onClick="openFacebook"
                android:id="@+id/fb"
                android:src="@drawable/facebook"
                android:scaleType="centerCrop"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@id/twit"/>

        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
